<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/imageFragment">

    <fragment
        android:id="@+id/imageFragment"
        android:name="com.example.pixabay.ui.fragments.ImageFragment"
        android:label="Image Fragment"
        tools:layout="@layout/fragment_image" >
        <action
            android:id="@+id/action_imageFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_imageFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.pixabay.ui.fragments.DetailFragment"
        android:label="Detail Fragment"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_detailFragment_to_imageFragment"
            app:destination="@id/imageFragment" />
        <argument
            android:name="image"
            app:argType="com.example.pixabay.data.local.entity.Pixabay" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.pixabay.ui.fragments.SearchFragment"
        android:label="Search Fragment"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_imageFragment"
            app:destination="@id/imageFragment" />
    </fragment>

</navigation>